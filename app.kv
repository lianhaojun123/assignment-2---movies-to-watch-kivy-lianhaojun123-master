# TODO: Create your Kivy layout in the kv language here
BoxLayout:
    orientation: "horizontal"
    BoxLayout:
        orientation: "vertical"
        size_hint_x: 0.4
        size_hint_y: 1
        Label:
            text: "Sort by:"
        Spinner:
            text: "Year"
            values: "Title","Year", "Category", "Is watched"
        Label:
            text: "Add New Movie..."
        Label:
            text: "Title:"
        TextInput:
            id: title_input
        Label:
            text: "Category:"
        TextInput:
            id: category_input
        Label:
            text: "Year:"
        TextInput:
            id: year_input
        Button:
            text: "Add Movie"
        Button:
            text: "Clear"
            on_press: app.clear_input_information()
    BoxLayout:
        orientation: "vertical"
        Label:
            size_hint_y:0.05
            id: display_watched_unwatch
        BoxLayout:
            size_hint_y:0.9
            orientation: "vertical"
            id: display_box
        Label:
            size_hint_y:0.05
            id: output_label

